<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.gammza.chupachups.notice.model.dao.NoticeDao">
	<resultMap type="com.gammza.chupachups.notice.model.vo.Notice" id="noticeMap"></resultMap>
	<select id="selectnoticeList" resultMap="noticeMap">
		select *
		  from notice
		 order by notice_no desc
	</select>
	<select id="selectTotalRecord" resultType="_int">
		select count(*)
		  from notice
	</select>
	<insert id="insertNotice" parameterType="notice">
		insert into
			notice
		values (
			notice_seq.nextval,
			default,
			#{noticeTitle},
			#{noticeContent},
			default,
			default		
		)
	</insert>
	<delete id="deleteNotice">
		delete from
			notice
		where
			notice_no = #{noticeNo}
	</delete>
	<select id="selectOneNotice" resultMap="noticeMap">
		select *
		  from notice
		 where notice_no = #{noticeNo}
	</select>
	<update id="updateNotice">
		update notice_title, notice_content
		   set notice_title = #{noticeTitle},
		   	   notice_content = #{noticeContent}
		 where notice_no = #{noticeNo}	
	</update>
</mapper>

